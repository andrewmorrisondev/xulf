{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "module": "NodeNext",
    "declaration": true,
    "composite": true,
    "types": ["jest", "node"]
  },
  "include": [
    "jest.config.ts",
    "ui/src/**/*.test.ts",
    "ui/src/**/*.spec.ts",
    "ui/src/**/*.test.tsx",
    "ui/src/**/*.spec.tsx",
    "ui/src/**/*.test.js",
    "ui/src/**/*.spec.js",
    "ui/src/**/*.test.jsx",
    "ui/src/**/*.spec.jsx",
    "ui/src/**/*.d.ts"
  ]
}
